{
  "name": "troll-wxml",
  "displayName": "Troll For Wxml",
  "description": "A visual editor for Weapp(.wxml)",
  "version": "0.0.14",
  "publisher": "orionunique",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/troll.png",
  "activationEvents": [
    "onCommand:extension.trollwxml"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [{
      "id": "wxml",
      "extensions": [ ".wxml" ]
    }],
    "commands": [
      {
        "command": "extension.trollwxml",
        "title": "Open Troll Editor",
        "icon": {
          "light": "./images/trolley-dark.svg",
          "dark": "./images/trolley-light.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == wxml",
          "command": "extension.trollwxml",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == wxml",
          "command": "extension.trollwxml",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "crc-32": "^1.2.0",
    "eslint": "^5.13.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guobinnew/vscode-troll"
  }
}
